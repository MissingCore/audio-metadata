{
  "git": {
    "tagName": "v${version}",
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md",
      "addUnreleased": true,
      "addVersionUrl": true
    },
    "release-it-pnpm": {}
  }
}
